{
    "include/ifgt/*.hpp": {
        "alternate": "src/{}.cpp",
        "type": "include",
        "template": ["#pragma once", "", "", "namespace ifgt", "{", "", "", "}"]
    },
    "src/*.hpp": {
        "alternate": "src/{}.cpp",
        "type": "header",
        "template": ["#pragma once", "", "", "namespace ifgt", "{", "", "", "}"]
    },
    "src/*.cpp": {
        "alternate": ["include/ifgt/{}.hpp", "src/{}.hpp"],
        "type": "source",
        "template": ["#include \"{}.hpp\"", "", "", "namespace ifgt", "{", "", "", "}"]
    },
    "test/*_test.cpp": {
        "alternate": ["src/{}.cpp", "src/{}.hpp", "include/ifgt/{}.hpp"],
        "type": "test",
        "template": ["#include \"{}.hpp\"", "", "#include <gtest/gtest.h>", "", "", "namespace ifgt", "{", "", "", "}"]
    }
}
